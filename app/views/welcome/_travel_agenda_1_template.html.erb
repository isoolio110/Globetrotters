<div id="profile-background-img">
    <img src="assets/profile_backgrounds/img3.jpg"> 
</div>

<div id="profile-travel-agenda-div">
  <p class="profile-section-header" id="travel-agenda-header"><span class="glyphicon glyphicon-plane" aria-hidden="true"></span> Your Travel Agenda</p>
  <a href="#locations/<%%= user_id %>" id="add-destination-link">Add Destinations</a>
  <br>
    <%% locations.each(function(location){ %>
      <div class="travel-agenda-item"> 
        <a href="#agenda/<%%= location.get('id') %>" class="travel-agenda-item-title"><%%= location.get('location') %></a><br>
        <p>Planned date: <%%= location.get('planned_date') %></p>
        <p>Visited date: <%%= location.get('visited_date') %></p>
      </div>
    <%% }) %>
</div>
